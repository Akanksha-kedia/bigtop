set -ex


. `dirname $0`/bigtop.bom
mkdir trino

# Set JAVA_HOME for this session to the JDK downloaded by the Puppet manifest
export JAVA_HOME=/usr/local/jdk-17.0.2
export PATH=$JAVA_HOME/bin:$PATH

mvn -T2C -pl '!:trino-server-rpm,!:trino-docs,!:trino-proxy,!:trino-verifier,!:trino-benchto-benchmarks' clean install -T1C -nsu -DskipTests -Dmaven.javadoc.skip=true -Dmaven.source.skip=true -Dair.check.skip-all=true -Dskip.npm -Dskip.yarn

mkdir -p build/trino
mkdir -p build/trino-cli

# Server
tar -C build/trino --strip-components=1 -xzf core/trino-server/target/*.tar.gz
# CLI
cp -ra client/trino-cli/target/*-executable.jar build/trino-cli/trino
